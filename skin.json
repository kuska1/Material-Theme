{
    "name": "Material",
    "author": "kuska1",
    "description": "A theme based on Google's Material 3 Design.",
    "tags": ["Material", "Material You", "Material 3", "Material Design", "Monet", "Dynamic", "Accent", "Light", "Dark", "WIP"],
    "version": "1.1.4",
    "header_image": "https://github.com/kuska1/Material-Theme/blob/main/.github/banner.jpg?raw=true",
    "splash_image": "https://github.com/kuska1/Material-Theme/blob/main/.github/banner.jpg?raw=true",

    "github": {
        "owner": "kuska1",
        "repo_name": "Material-Theme"
    },

    "Steam-WebKit": "webkit.css",
    "UseDefaultPatches": true,

    "Conditions": {
        "Appearance": {
            "description": "Choose light or dark mode.",
            "default": "Dark",
            "tab": "Style",
            "values": {
                "Light": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/main/appearance/light.css"
                    }
                },
                "Dark": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/main/appearance/dark.css"
                    }
                }
            }
        },
        "Color": {
            "description": "Choose source color. For Custom/Dynamic Color use \"Custom Accent Color\".",
            "default": "Blue",
            "tab": "Style",
            "values": {
                "Red": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/main/colors/red.css"
                    }
                },
                "Green": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/main/colors/green.css"
                    }
                },
                "Blue": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/main/colors/blue.css"
                    }
                },
                "Yellow": {
                    "TargetCss": {
                        "affects": [".*"], "src": "css/main/colors/yellow.css"
                    }
                },
                "Custom": {
                    "TargetJs": {
                        "affects": [".*"], "src": "js/main/colors/custom.js"
                    }
                },
                "Dynamic (Beta)": {
                    "TargetJs": {
                        "affects": [".*"], "src": "js/main/colors/dynamic.js"
                    }
